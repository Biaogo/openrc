        '30-binfmt.hook'
        opentmpfiles-dev.{confd,initd}
        opentmpfiles-setup.{confd,initd}
        'opensysusers.initd'
        'kmod-static-nodes.initd'
        udev.{confd,initd}
        udev-settle.{confd,initd}
        udev-trigger.{confd,initd})
